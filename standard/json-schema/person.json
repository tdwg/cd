{
    "$schema": "https://json-schema.org/draft-04/schema#",
    "$id": "https://raw.githubusercontent.com/tdwg/cd/master/standard/json-schema/person.json",
    "title": "Person",
    "description": "A person (alive or dead).",
    "type": "object",
    "properties":
    {
        "fullName":
        {
            "description": "Preferred form of personal name for display as a string.",
            "type": "string"
        },
        "familyName":
        {
            "description": "Family name. In the U.S., the last name of a Person.",
            "type": "string"
        },
        "additionalName":
        {
            "description": "An additional name for a Person, can be used for a middle name.",
            "type": "string"
        },
        "givenName":
        {
            "description": "Given name. In the U.S., the first name of a Person.",
            "type": "string"
        },
        "hasAddress":
        {
            "description": "This property refers to one or more related instances of the Address class.",
            "type": "array",
            "items":
            {
                "$ref": "https://raw.githubusercontent.com/tdwg/cd/master/standard/json-schema/address.json"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "hasContactDetail":
        {
            "description": "This property refers to one or more related instances of the ContactDetail class.",
            "type": "array",
            "items":
            {
                "$ref": "https://raw.githubusercontent.com/tdwg/cd/master/standard/json-schema/contact-detail.json"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "hasIdentifier":
        {
            "description": "This property refers to one or more related instances of the Identifier class.",
            "type": "array",
            "items":
            {
                "$ref": "https://raw.githubusercontent.com/tdwg/cd/master/standard/json-schema/identifier.json"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "hasReference":
        {
            "description": "This property refers to one or more related instances of the Reference class.",
            "type": "array",
            "items":
            {
                "$ref": "https://raw.githubusercontent.com/tdwg/cd/master/standard/json-schema/reference.json"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "hasMeasurementOrFact":
        {
            "description": "This property refers to one or more related instances of the MeasurementOrFact class.",
            "type": "array",
            "items":
            {
                "$ref": "https://raw.githubusercontent.com/tdwg/cd/master/standard/json-schema/measurement-or-fact.json"
            },
            "minItems": 1,
            "uniqueItems": true
        }
    }
}